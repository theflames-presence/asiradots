@import "~/.config/rofi/colors/flamedots.rasi"

* {
    background-color: #28282890;
    text-color: @foreground;
}

window {
    transparency: "real";
    location: center;
    anchor: center;
    height: 410px;
    width: 900px;
    border-radius: 15px;
}

mainbox {
    spacing: 10px;
    padding: 10px 25px 25px 25px;
    background-color: @background;
    children: [ "inputbar", "listview" ];
}

inputbar {
    spacing: 10px;
    padding: 15px;
    border-radius: 12px;
    background-color: @background-alt;
    children: [ "prompt", "entry" ];
}

prompt {
    text-color: @foreground;
}

entry {
    text-color: @foreground;
    background-color: transparent;
}

listview {
    columns: 3;
    lines: 2;
    spacing: 12px;
    background-color: transparent;
    scrollbar: false;
    cycle: true;
    dynamic: false;
    layout: vertical;
    fixed-height: true;
    fixed-columns: true;
}

element {
    padding: 10px;
    border-radius: 10px;
    background-color: transparent;
    orientation: vertical;
    children: [ "element-icon", "element-text" ];
}

element selected {
    text-color: @white;
}

element-icon {
    size: 242px;
    padding: 0px;
    background-color: transparent;
    margin: 0px;
    border-radius: 8px;
    horizontal-align: 0.5;
    vertical-align: 1;
}


element-text {
    background-color: transparent;
    text-color: inherit;
    horizontal-align: 0.5;
    vertical-align: 0.5;
}

element-text selected {
    text-color: @white;
    background-color: @selected;
}
