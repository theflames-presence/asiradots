{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,
  "cssPriority": "application",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "control-center-margin-left": 5,
  "control-center-layer": "overlay",
  "control-center-exclusive-zone": true,
  "notification-2fa-action": true,
  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 10,
  "notification-window-width": 400,
  "notification-window-height": 500,
  "notification-window-preferred-output": "",
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-height": 500,
  "control-center-width": 350,
  "control-center-preferred-output": "",
  "layer-shell-cover-screen": true,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-visibility": {},
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "inhibitors",
    "title",
    "notifications",
    "dnd"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": " Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "buttons-grid": {
      "buttons-per-row": 3,
      "actions": [
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_wifi.sh'",
          "update-command": "sh -c 'set +e;[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
          "label": "󰂯",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_bluetooth.sh'",
          "update-command": "sh -c 'set +e;bluetoothctl show | grep -qF Powered:\\ yes && echo true || echo false'"
        },
        {
          "label": "󰀝",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_airplanemode.sh'",
          "update-command": "sh -c 'set +e;[[ $(nmcli radio wifi) == \"enabled\" ]] || bluetoothctl show | grep -qF Powered:\\ yes && echo false || echo true'"
        },

        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "swayosd-client --output-volume mute-toggle",
          "update-command": "sh -c 'set +e;pactl get-sink-mute @DEFAULT_SINK@ | grep -q \"no\" && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "swayosd-client --input-volume mute-toggle",
          "update-command": "sh -c 'set +e;pactl get-source-mute @DEFAULT_SOURCE@ | grep -q \"no\" && echo true || echo false'"
        },

        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c 'swaync-client -d -sw'",
          "update-command": "sh -c 'set +e;swaync-client -D'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_darkmode.sh'",
          "update-command": "sh -c 'set +e;grep -q '^post_command.*dark' ~/.config/waypaper/config.ini && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_hyprsunset.sh'",
          "update-command": "sh -c 'set +e;pgrep -x hyprsunset >/dev/null && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/swaync/scripts/toggle_hypridle.sh'",
          "update-command": "sh -c '~/.config/swaync/scripts/update_hypridle.sh'"
        }
      ]
    },
    "volume": {
      "label": "",
      "show-per-app-icon": true,
      "show-per-app": true
    },
    "backlight": {
      "label": "󰃠",
      "device": "intel_backlight",
      "subsystem": "backlight",
      "min": 5
    }
  },
  "script-fail-notify": false,

  "scripts": {
    "play-sound": {
      "exec": "~/.config/swaync/scripts/notify_sound.sh",
      "app-name": ".*",
      "run-on": "receive"
    }
  }
}
